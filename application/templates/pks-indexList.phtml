            if ($line['recordType'] == 'pub') {
              printf(
                "<td>pub</td><td>%s / %s</td><td>%s</td><td>%s</td>\n",
                $line['bits'],
                $formatter->formatKeyIdLink($controllerPath, $line['keyId']),
